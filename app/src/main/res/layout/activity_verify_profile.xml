<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:id="@+id/layVerify"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activity.VerifyProfileActivity">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp">

    <ImageView
        android:id="@+id/ivProfileVerify"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/picture"
        />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tvTitleVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:fontFamily="@font/overpass_semibold"
        android:textSize="15sp"
        android:textColor="@color/colorMain"
        android:text="Ta facil agora"
        />

    <TextView
        android:id="@+id/tvVerifyDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:gravity="center"
        android:fontFamily="@font/overpass"
        android:textSize="18sp"
        android:text="Você não vai precisar enviar nada de mais, apenas uma foto sua que só será usada para a verificação :)." />

    <android.support.v7.widget.CardView
        android:id="@+id/cvVerifyProfile"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        android:layout_gravity="center"
        app:cardElevation="0dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_btn"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/tvLabelVerifyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/overpass"
                android:textColor="@color/colorWhite"
                android:text="tentar agora"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>