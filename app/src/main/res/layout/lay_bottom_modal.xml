<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="18dp"
            android:src="@drawable/menina"
            android:id="@+id/cvModal" />

        <TextView
            android:id="@+id/tvInfoModal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cvModal"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/cvModal"
            android:fontFamily="@font/overpass"
            android:text="Aninha, quer se conectar com você. Agora vocês podem conversar." />

    </RelativeLayout>

</RelativeLayout>