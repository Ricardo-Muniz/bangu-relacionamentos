<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:rsb="http://schemas.android.com/tools"
    android:background="@drawable/shape_dialog">

    <RelativeLayout
        android:id="@+id/layMain"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvRegiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/overpass_semibold"
        android:text="RegiÃ£o"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/layCardRegiao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tvRegiao"
        android:gravity="center|left"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left">

                <android.support.v7.widget.CardView
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="15dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/cvProximoRegiao"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_cv_tags">

                        <TextView
                            android:id="@+id/tvProximoRegiao"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/overpass"
                            android:gravity="center"
                            android:text="Proximo" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="2dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/cvOutraRegiao"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_cv_tags">

                        <TextView
                            android:id="@+id/tvOutraRegiao"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/overpass"
                            android:gravity="center"
                            android:text="Outra regiao" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>


    <TextView
        android:id="@+id/tvSexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layCardRegiao"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/overpass_semibold"
        android:text="Sexo "
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/layCardSexo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tvSexo"
        android:gravity="center|left"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left">

                <android.support.v7.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="15dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/cvMulherSexo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_cv_tags">

                        <TextView
                            android:id="@+id/tvMulherSexo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/overpass"
                            android:gravity="center"
                            android:text="Mulher" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="15dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/cvHomemSexo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_cv_tags">

                        <TextView
                            android:id="@+id/tvHomemSexo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/overpass"
                            android:gravity="center"
                            android:text="Homem" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="2dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/cvLgbtSexo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_cv_tags">

                        <TextView
                            android:id="@+id/tvLgbtSexo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/overpass"
                            android:gravity="center"
                            android:text="Todos" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/tvIdade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layCardSexo"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/overpass_semibold"
        android:text="Idade - ate 20 anos"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/laySeek"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="40dp"
        android:layout_below="@id/tvIdade"
        android:gravity="center"
        android:orientation="vertical">

        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:id="@+id/rangeSeekbar1"
            app:bar_color="@color/colorGray"
            app:max_value="80"
            app:min_value="18"
            app:bar_highlight_color="@color/colorMain"
            app:right_thumb_color="@color/colorMain"
            app:left_thumb_color="@color/colorMain"
            app:left_thumb_color_pressed="@color/colorMain"
            app:right_thumb_color_pressed="@color/colorMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="3dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/layMain">
    <LinearLayout
        android:id="@+id/layFiltrarBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_btn"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="@font/overpass"
            android:textColor="@color/colorWhite"
            android:text="buscar"
            />
    </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>