<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivTagsLearn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/personality"
                />

            <TextView
                android:id="@+id/tvTextTitleTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/ivTagsLearn"
                android:gravity="center"
                android:fontFamily="@font/overpass_semibold"
                android:textColor="@color/colorMain"
                android:text="texto de titulo"
                />

            <TextView
                android:id="@+id/tvTexTagsLearn"
                android:layout_below="@id/tvTextTitleTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:textSize="18sp"
                android:fontFamily="@font/overpass"
                android:textColor="@color/colorGray"
                android:text="Texto de apresentação de cada item que será gerado para a explicação de como as tags funcionam."
                />


        </RelativeLayout>
    </ScrollView>



</RelativeLayout>