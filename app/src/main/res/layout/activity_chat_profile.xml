<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Activity.ChatProfileActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardElevation="10dp"
        android:backgroundTint="@color/colorWhite">
        <LinearLayout
            android:id="@+id/layReturnBar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center|start"
            android:padding="0dp">

            <ImageView
                android:id="@+id/ivReturnProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:clickable="true"
                android:focusable="true"
                app:srcCompat="@drawable/ret_ic" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfileChat"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@null"
                />

            <LinearLayout
                android:id="@+id/layVisitProfile"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="10dp">
                <TextView
                    android:id="@+id/tvNameProfileChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass_semibold"
                    android:textColor="@color/colorMain"
                    android:textSize="16sp"
                    android:text=""
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass_light"
                    android:textColor="@color/colorGray"
                    android:textSize="12sp"
                    android:text="pessoa adicionada"
                    />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cvSendRequest"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="20dp"
                app:cardElevation="0dp"
                android:layout_height="40dp">
                <LinearLayout
                    android:id="@+id/laySendRequest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/shape_lay_acep">
                    <TextView
                        android:id="@+id/tvSend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorMain"
                        android:fontFamily="@font/overpass"
                        android:maxLines="1"
                        android:text="permitir"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="72dp">
    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="70dp"
        android:gravity="center|start"
        android:layout_alignParentBottom="true">
        <EditText
            android:id="@+id/edtMessage"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="70dp"
            android:background="@drawable/shape_edit_text_chat"
            android:textColorHint="@color/colorGray"
            android:textColor="@color/colorGrayPage"
            android:padding="10dp"
            android:textSize="15sp"
            android:fontFamily="@font/overpass_light"
            android:hint="Digite uma mensagem"
            />
        <android.support.v7.widget.CardView
            android:id="@+id/cvSendMessage"
            android:layout_alignParentEnd="true"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="18dp"
            android:backgroundTint="@android:color/transparent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/send_message_ic"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</RelativeLayout>