<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:backgroundTint="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorWhite"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivPeople"
                android:layout_width="match_parent"
                android:layout_height="228dp"
                android:scaleType="centerCrop"
                android:src="@drawable/menina" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ivPeople"
                android:layout_alignParentStart="true"
                android:layout_marginTop="-10dp"
                android:backgroundTint="@android:color/transparent"
                app:cardCornerRadius="2dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_lay_card">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cvName"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginStart="24dp"
                        app:cardElevation="0dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="195dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvNomeAge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/overpass"
                                    android:text="Aninha, 19"
                                    android:textColor="@color/colorGray"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/tvLocal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tvNomeAge"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginBottom="20dp"
                                    android:fontFamily="@font/overpass_light"
                                    android:text="Goiania, go"
                                    android:textSize="13sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="70dp"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/ivHeartLike"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:srcCompat="@drawable/heart_one_ic" />
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cvName"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:id="@+id/cvTrabalho"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="0dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="200dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center|left"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/overpass"
                                        android:text="Trabalho"
                                        android:textColor="@color/colorGray"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/overpass_light"
                                        android:text="Trabalho de garÃ§onete no hotel beira da mata" />

                                    <!-- Tags de atividade -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:gravity="center|left|top">

                                        <android.support.v7.widget.CardView
                                            android:layout_width="40dp"
                                            android:layout_height="20dp"
                                            app:cardElevation="0dp">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="15dp"
                                                android:background="@drawable/shape_cv_tags"
                                                android:gravity="center">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:fontFamily="@font/overpass_light"
                                                    android:gravity="center"
                                                    android:text="Hard"
                                                    android:textSize="7sp" />
                                            </LinearLayout>
                                        </android.support.v7.widget.CardView>

                                        <android.support.v7.widget.CardView
                                            android:layout_width="40dp"
                                            android:layout_height="20dp"
                                            android:layout_marginStart="10dp"
                                            app:cardElevation="0dp">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="15dp"
                                                android:background="@drawable/shape_cv_tags"
                                                android:gravity="center">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:fontFamily="@font/overpass_light"
                                                    android:gravity="center"
                                                    android:text="Home"
                                                    android:textSize="7sp" />
                                            </LinearLayout>
                                        </android.support.v7.widget.CardView>
                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="70dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="0dp">

                                    <ImageView
                                        android:layout_width="90dp"
                                        android:layout_height="90dp"
                                        app:srcCompat="@drawable/line_circ_one_ic"

                                        />
                                </LinearLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="0dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="200dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center|left"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/overpass"
                                        android:text="DiversÃ£o"
                                        android:textColor="@color/colorGray"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/overpass_light"
                                        android:text="Trabalho de garÃ§onete no hotel beira da mata" />

                                    <!-- Tags de atividade -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:gravity="center|left|top">

                                        <android.support.v7.widget.CardView
                                            android:layout_width="40dp"
                                            android:layout_height="20dp"
                                            app:cardElevation="0dp">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="15dp"
                                                android:background="@drawable/shape_cv_tags"
                                                android:gravity="center">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:fontFamily="@font/overpass_light"
                                                    android:gravity="center"
                                                    android:text="Fun"
                                                    android:textSize="7sp" />
                                            </LinearLayout>
                                        </android.support.v7.widget.CardView>

                                        <android.support.v7.widget.CardView
                                            android:layout_width="40dp"
                                            android:layout_height="20dp"
                                            android:layout_marginStart="10dp"
                                            app:cardElevation="0dp">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="15dp"
                                                android:background="@drawable/shape_cv_tags"
                                                android:gravity="center">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:fontFamily="@font/overpass_light"
                                                    android:gravity="center"
                                                    android:text="Sleep"
                                                    android:textSize="7sp" />
                                            </LinearLayout>
                                        </android.support.v7.widget.CardView>

                                        <android.support.v7.widget.CardView
                                            android:layout_width="40dp"
                                            android:layout_height="20dp"
                                            android:layout_marginStart="10dp"
                                            app:cardElevation="0dp">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="15dp"
                                                android:background="@drawable/shape_cv_tags"
                                                android:gravity="center">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:fontFamily="@font/overpass_light"
                                                    android:gravity="center"
                                                    android:text="Sport"
                                                    android:textSize="7sp" />
                                            </LinearLayout>
                                        </android.support.v7.widget.CardView>
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="70dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="0dp">

                                    <ImageView
                                        android:layout_width="90dp"
                                        android:layout_height="90dp"
                                        app:srcCompat="@drawable/line_circ_two_ic" />

                                </LinearLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="0dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="200dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center|left|bottom"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/overpass"
                                        android:text="Locais"
                                        android:textColor="@color/colorGray"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/overpass_light"
                                        android:text="Gosto de ir no bar nos finais de semana." />

                                    <!-- Tags de atividade -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:gravity="center|left|top">

                                        <android.support.v7.widget.CardView
                                            android:layout_width="40dp"
                                            android:layout_height="20dp"
                                            app:cardElevation="0dp">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="15dp"
                                                android:background="@drawable/shape_cv_tags"
                                                android:gravity="center">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:fontFamily="@font/overpass_light"
                                                    android:gravity="center"
                                                    android:text="Food"
                                                    android:textSize="7sp" />
                                            </LinearLayout>
                                        </android.support.v7.widget.CardView>

                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="70dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="0dp">

                                    <ImageView
                                        android:layout_width="90dp"
                                        android:layout_height="90dp"
                                        android:layout_marginStart="0.7dp"
                                        app:srcCompat="@drawable/line_circ_three_ic" />
                                </LinearLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvMatch"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/cardView"
                android:layout_marginStart="31dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/cardView"
                android:backgroundTint="@android:color/transparent"
                app:cardCornerRadius="2dp"
                app:cardElevation="0dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>