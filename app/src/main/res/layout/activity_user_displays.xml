<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UserDisplaysActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center|left"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/ivReturnProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ret_ic" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileUserChat"
            android:layout_marginTop="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/menina"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvNameUserChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/overpass_semibold"
                android:textColor="@color/colorGray"
                android:textSize="18sp"
                android:text="Carla"
                />
            <TextView
                android:id="@+id/tvHourChatUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/overpass_light"
                android:textColor="@color/colorGray"
                android:textSize="11sp"
                android:text="usuario ativo"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">
    </LinearLayout>

</RelativeLayout>