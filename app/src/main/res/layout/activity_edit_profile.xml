<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layMainEditProfile"
    android:background="@color/colorWhite"
    tools:context=".Activity.EditProfileActivity">

    <android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorGrayPage"
        app:cardCornerRadius="23dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:id="@+id/fabSaveDataEditProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="4dp"
                app:srcCompat="@drawable/ok_ic"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:fontFamily="@font/overpass"
                android:gravity="center"
                android:text="salvar"
                android:textColor="@color/colorWhite"
                tools:ignore="NewApi" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Texto de intro de edicao -->
            <TextView
                android:id="@+id/tvEditProfWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/overpass"
                android:padding="20dp"
                android:text="Ricardo, agora você está querendo editar seu perfil, vê se capricha em!"
                android:textColor="@color/colorGrayPage"
                android:textSize="20sp" />

            <!-- Label de 'pessoal' -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/overpass"
                android:text="Pessoal"
                android:textColor="@color/colorGrayBg"
                android:textSize="12sp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtEditProfName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:hint="Como quer ser chamado"
                    android:textColor="@color/colorGray"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <!-- Label de 'pessoal' -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/overpass"
                android:text="Comunidade"
                android:textColor="@color/colorGrayBg"
                android:textSize="12sp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:hint="Minha descrição"
                    android:inputType="textMultiLine"
                    android:textColor="@color/colorGray"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtProfissional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:hint="Descreva sua vida profissional"
                    android:inputType="textMultiLine"
                    android:textColor="@color/colorGray"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtFun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:hint="Com oque se diverte"
                    android:inputType="textMultiLine"
                    android:textColor="@color/colorGray"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <!-- Label de 'pessoal' -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/overpass"
                android:text="Avançadas"
                android:textColor="@color/colorGrayBg"
                android:textSize="12sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/cvCreateTag"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_btn"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/overpass"
                        android:gravity="center"
                        android:text="@string/lbl_criar_tag"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/info_ic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/overpass_light"
                    android:text="você ainda não possui tags, comece uma nova era criando as suas proprias." />
            </LinearLayout>

            <!-- Label de 'extras' -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/overpass"
                android:text="Extras"
                android:textColor="@color/colorGrayBg"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/layAgeEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/cvChangeAge"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/colorWhite"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvAgeUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/overpass"
                            android:text="12/05/1999" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="1dp"
                            android:fontFamily="@font/overpass"
                            android:textColor="@color/colorGrayPage"
                            android:text="toque para editar seu aniversário." />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp"
                android:layout_marginTop="10dp">

                <android.support.v7.widget.CardView
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/colorWhite"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/overpass"
                            android:text="sexo" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginStart="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RadioGroup
                                android:id="@+id/radioGroupSex"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <RadioButton
                                    android:id="@+id/radioButtonMan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/overpass"
                                    android:layout_marginEnd="15dp"
                                    android:text="Homem"
                                    />
                                <RadioButton
                                    android:id="@+id/radioButtonGirl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/overpass"
                                    android:text="Mulher"
                                    />
                            </RadioGroup>
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>