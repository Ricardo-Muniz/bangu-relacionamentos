<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layCardProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:gravity="center|start"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfileVisits"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@null" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNameUserVisit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/overpass_semibold"
                android:text=""
                android:textColor="@color/colorGrayPage"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/last_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/overpass_light"
                android:text="visualizou seu perfil recentemente..."
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>