<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="25sp"
                android:fontFamily="@font/overpass"
                android:text="@string/tlt_dialog_finalize"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layTitle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/overpass_light"
                android:textSize="20sp"
                android:text="Pronto, todos os seus dados estão completos, as informações que incrementam seu perfil vão estar embreve em suas mãos, para adicionar novas fotos e as coisas que mais gosta de fazer."
                />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="5dp"
                android:backgroundTint="@color/colorGray">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:fontFamily="@font/overpass"
                    android:textColor="@color/colorWhite"
                    android:textSize="17sp"
                    android:text="Tudo bem, vamos la"
                    />

            </android.support.v7.widget.CardView>
        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>